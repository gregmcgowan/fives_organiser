<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white">


    <android.support.design.widget.TabLayout
            android:id="@+id/match_squad_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.design.widget.TabItem
                android:id="@+id/squad_uninvited_players_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/squad_not_invited_players_tab_text"/>


        <android.support.design.widget.TabItem
                android:id="@+id/squad_invited_players_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/squad_invited_players_tab_text"/>

    </android.support.design.widget.TabLayout>


    <android.support.v4.view.ViewPager
            android:id="@+id/match_squad_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>


</LinearLayout>